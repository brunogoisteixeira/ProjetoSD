<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityLigaDesliga">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:addStatesFromChildren="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtIdTela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Id da Tela"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luzes"
            android:textAlignment="center" />

        <ToggleButton
            android:id="@+id/tbLuz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:checked="false"
            android:editable="false"
            android:text="ToggleButton"
            android:textAlignment="center"
            android:textOff="Desligado"
            android:textOn="Ligado" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tomdas"
            android:textAlignment="center" />

        <ToggleButton
            android:id="@+id/tbTomadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:checked="false"
            android:editable="false"
            android:text="ToggleButton"
            android:textAlignment="center"
            android:textOff="Desligado"
            android:textOn="Ligado" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ventiladores"
            android:textAlignment="center" />

        <ToggleButton
            android:id="@+id/tbVentilador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:checked="false"
            android:editable="false"
            android:text="ToggleButton"
            android:textAlignment="center"
            android:textOff="Desligado"
            android:textOn="Ligado" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Portas"
            android:textAlignment="center" />

        <ToggleButton
            android:id="@+id/tbPortas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:checked="false"
            android:editable="false"
            android:text="ToggleButton"
            android:textAlignment="center"
            android:textOff="Desligado"
            android:textOn="Ligado" />

        <Switch
            android:id="@+id/swDesligaTudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desligar Tudo" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="399dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnEstadoLuz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_light"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnEstadoTomada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_light"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnEstadoVentilador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ligado"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnEstadoPorta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ligado"
                android:visibility="invisible" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>